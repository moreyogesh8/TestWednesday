<aura:component >
    <aura:attribute name="input1" type="integer" description="First Input" />
    <aura:attribute name="input2" type="integer" description="Second Input" />
    <aura:attribute name="result" type="integer" description="Operation output" />
    
    <lightning:input type="number" value="{!v.input1}" label="Please Enter First Value" required="true" />
    <lightning:input type="number" value="{!v.input2}" label="Please Enter Second Value" required="true" />
    
    <lightning:button label="Add" onclick="{!c.doAdd}" />
    <lightning:button label="Substract" onclick="{!c.doSubstract}" />
    <lightning:button label="Multiply" onclick="{!c.domultiply}" />
    <lightning:button label="Divide" onclick="{!c.doDivide}" />
    <br/><br/>
    Result is {!v.result}
</aura:component>